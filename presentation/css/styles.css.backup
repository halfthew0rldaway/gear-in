    height: clamp(24px, 3vw, 28px);
    stroke-width: 2;
}

@keyframes docReveal {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes docIconFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
}

.doc-card[data-delay="0.1"] { animation-delay: 0.1s; }
.doc-card[data-delay="0.2"] { animation-delay: 0.2s; }
.doc-card[data-delay="0.3"] { animation-delay: 0.3s; }
.doc-card[data-delay="0.4"] { animation-delay: 0.4s; }

/* Database Structure - Consistent with symmetric layout */
.db-structure {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, auto);
    gap: clamp(1.25rem, 2.5vw, 1.75rem);
    width: 100%;
    max-width: min(1000px, 100%);
    margin: 0 auto;
    box-sizing: border-box;
    justify-items: stretch;
    align-items: start;
}

.db-table {
    background: white;
    border: 1px solid var(--gray-200);
    border-radius: clamp(1rem, 2vw, 1.5rem);
    padding: clamp(1.25rem, 2.5vw, 1.75rem);
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    transition: var(--transition);
    position: relative;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
    min-height: fit-content;
    max-height: 100%;
