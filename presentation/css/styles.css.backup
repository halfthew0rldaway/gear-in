/* Reset & Base */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    --gray-50: #f9f9f9;
    --gray-100: #f2f2f2;
    --gray-200: #dfdfdf;
    --gray-300: #c4c4c4;
    --gray-400: #9b9b9b;
    --gray-500: #6f6f6f;
    --gray-600: #4b4b4b;
    --gray-700: #353535;
    --gray-800: #1f1f1f;
    --gray-900: #121212;
    --red-500: #ef4444;
    --red-600: #dc2626;
    --red-700: #b91c1c;
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    
    /* Layout consistency */
    --slide-padding: clamp(2rem, 5vw, 4rem);
    --content-max-width: 1200px;
    --grid-gap: clamp(1.5rem, 3vw, 2rem);
    --card-padding: clamp(1.5rem, 3vw, 2rem);
}

html {
    height: 100%;
    overflow: hidden;
}

body {
    font-family: 'Space Grotesk', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    background: var(--gray-50);
    color: var(--gray-900);
    overflow: hidden;
    height: 100vh;
    position: relative;
    font-size: clamp(14px, 1.5vw, 16px);
}

/* Progress Bar */
.progress-bar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--gray-200);
    z-index: 10000;
}

.progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--gray-900), var(--gray-700));
    width: 8.33%;
    transition: width 0.5s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Slides Container */
.slides-container {
    width: 100%;
    height: 100vh;
    position: relative;
    overflow: hidden;
}

.slide {
    position: absolute;
    width: 100%;
    height: 100vh;
    display: flex;
    align-items: flex-start;
    justify-content: center;
    opacity: 0;
    transform: translateX(100%);
    transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    will-change: transform, opacity;
    overflow: hidden;
    top: 0;
    left: 0;
}

.slide.slide-active {
    opacity: 1;
    transform: translateX(0);
    z-index: 10;
}

.slide.slide-prev {
    transform: translateX(-100%);
}

.slide-content {
    max-width: var(--content-max-width);
    width: min(90%, 1200px);
    padding: var(--slide-padding);
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    min-height: min-content;
    margin: auto;
    box-sizing: border-box;
    overflow-y: auto;
    overflow-x: hidden;
    max-height: 100vh;
    scrollbar-width: thin;
    scrollbar-color: var(--gray-300) transparent;
    -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
    overscroll-behavior: contain; /* Prevent scroll chaining */
}

/* Remove scrollable on first and last slide */
.slide[data-slide="1"] .slide-content,
.slide[data-slide="15"] .slide-content {
    overflow-y: hidden !important;
    overflow-x: hidden !important;
    scrollbar-width: none !important; /* Firefox */
    -ms-overflow-style: none !important; /* IE/Edge */
}

.slide[data-slide="1"] .slide-content::-webkit-scrollbar,
.slide[data-slide="15"] .slide-content::-webkit-scrollbar {
    display: none !important; /* Chrome/Safari */
}

.slide-content::-webkit-scrollbar {
    width: 10px;
}

.slide-content::-webkit-scrollbar-track {
    background: var(--gray-100);
    border-radius: 5px;
}

.slide-content::-webkit-scrollbar-thumb {
    background: var(--gray-400);
    border-radius: 5px;
    border: 2px solid var(--gray-100);
}

.slide-content::-webkit-scrollbar-thumb:hover {
    background: var(--gray-500);
}

/* Slide 1: Title */
.title-animation {
    text-align: center;
    position: relative;
    z-index: 2;
}

.main-title {
    font-size: clamp(4rem, 12vw, 8rem);
    font-weight: 700;
    letter-spacing: -0.05em;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.title-word {
    display: inline-block;
    opacity: 0;
    transform: translateY(50px) scale(0.8);
    animation: titleReveal 1s cubic-bezier(0.4, 0, 0.2, 1) forwards;
}

.title-word[data-delay="0"] {
    animation-delay: 0.3s;
}

.title-word[data-delay="0.2"] {
    animation-delay: 0.5s;
}

.title-dash {
    color: var(--gray-400);
    animation: dashPulse 2s ease-in-out infinite;
    animation-delay: 0.7s;
    opacity: 0;
    animation-fill-mode: forwards;
}

@keyframes titleReveal {
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

@keyframes dashPulse {
    0%, 100% {
        opacity: 0.5;
        transform: scale(1);
    }
    50% {
        opacity: 1;
        transform: scale(1.2);
    }
}

.subtitle {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    color: var(--gray-600);
    font-weight: 500;
    margin-top: 1rem;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 0.8s;
}

.tagline {
    font-size: clamp(0.875rem, 2vw, 1.125rem);
    color: var(--gray-400);
    text-transform: uppercase;
    letter-spacing: 0.3em;
    margin-top: 2rem;
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    animation-delay: 1s;
}

@keyframes fadeInUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Floating Elements */
.floating-elements {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
}

.float-circle {
    position: absolute;
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(31, 41, 55, 0.1), transparent);
    animation: float 6s ease-in-out infinite;
    animation-delay: var(--delay);
    left: var(--x);
    top: var(--y);
    filter: blur(40px);
}

@keyframes float {
    0%, 100% {
        transform: translate(0, 0) scale(1);
    }
    33% {
        transform: translate(30px, -30px) scale(1.1);
    }
    66% {
        transform: translate(-20px, 20px) scale(0.9);
    }
}

/* Slide Header - Consistent across all slides */
.slide-header {
    margin-bottom: clamp(2rem, 4vw, 3rem);
    display: flex;
    align-items: center;
    gap: clamp(1rem, 2vw, 1.5rem);
    width: 100%;
}

.slide-number {
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    font-weight: 700;
    color: var(--gray-300);
    letter-spacing: 0.1em;
    flex-shrink: 0;
    min-width: 3ch;
}

.slide-title {
    font-size: clamp(1.75rem, 4vw, 3.5rem);
    font-weight: 600;
    letter-spacing: -0.02em;
    flex: 1;
}

/* Feature Cards - Consistent grid with symmetric layout */
.content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(250px, 100%), 1fr));
    gap: var(--grid-gap);
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    justify-items: stretch;
    align-items: stretch;
}

/* 4 items: Perfect 2x2 grid */
.content-grid:has(> :nth-child(4):last-child) {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, auto);
}

.content-grid:has(> :nth-child(4):last-child) > * {
    width: 100%;
    height: auto;
}

.feature-card {
    background: white;
    border: 1px solid var(--gray-200);
    border-radius: clamp(1rem, 2vw, 2rem);
    padding: clamp(1.5rem, 3vw, 2rem);
    text-align: center;
    opacity: 0;
    transform: translateY(30px) scale(0.95);
    animation: cardReveal 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    transition: var(--transition);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    min-height: min-content;
    box-sizing: border-box;
    width: 100%;
}

.feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    border-color: var(--gray-300);
}

.feature-card[data-delay="0.1"] { animation-delay: 0.1s; }
.feature-card[data-delay="0.2"] { animation-delay: 0.2s; }
.feature-card[data-delay="0.3"] { animation-delay: 0.3s; }
.feature-card[data-delay="0.4"] { animation-delay: 0.4s; }

@keyframes cardReveal {
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

.card-icon {
    width: clamp(48px, 6vw, 64px);
    height: clamp(48px, 6vw, 64px);
    margin: 0 auto clamp(0.75rem, 1.5vw, 1rem);
    color: var(--gray-900);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gray-100);
    border-radius: clamp(0.75rem, 1.5vw, 1rem);
    padding: clamp(0.75rem, 1.5vw, 1rem);
    animation: iconFloat 3s ease-in-out infinite;
    position: relative;
    flex-shrink: 0;
}

.card-icon::before {
    content: '';
    position: absolute;
    inset: -2px;
    border: 2px solid var(--gray-300);
    border-radius: 1rem;
    opacity: 0;
    animation: iconGlow 3s ease-in-out infinite;
}

.card-icon svg {
    width: clamp(24px, 3vw, 32px);
    height: clamp(24px, 3vw, 32px);
    stroke-width: 2;
}

@keyframes iconFloat {
    0%, 100% { 
        transform: translateY(0) rotate(0deg);
    }
    25% { 
        transform: translateY(-8px) rotate(2deg);
    }
    50% { 
        transform: translateY(-12px) rotate(0deg);
    }
    75% { 
        transform: translateY(-8px) rotate(-2deg);
    }
}

@keyframes iconGlow {
    0%, 100% { 
        opacity: 0;
        transform: scale(1);
    }
    50% { 
        opacity: 0.5;
        transform: scale(1.05);
    }
}

.feature-card h3 {
    font-size: clamp(1.125rem, 2vw, 1.25rem);
    font-weight: 600;
    margin-bottom: clamp(0.5rem, 1vw, 0.75rem);
    color: var(--gray-900);
}

.feature-card p {
    color: var(--gray-600);
    font-size: clamp(0.875rem, 1.5vw, 1rem);
    line-height: 1.6;
}

/* Tech Stack - Consistent grid with symmetric layout */
.tech-stack {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(180px, 100%), 1fr));
    gap: var(--grid-gap);
    width: 100%;
    max-width: 100%;
    justify-items: stretch;
    align-items: stretch;
    box-sizing: border-box;
}

/* 5 items: 3 top, 2 bottom centered */
.tech-stack:has(> :nth-child(5):last-child) {
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, auto);
}

.tech-stack:has(> :nth-child(5):last-child) > :nth-child(1),
.tech-stack:has(> :nth-child(5):last-child) > :nth-child(2),
.tech-stack:has(> :nth-child(5):last-child) > :nth-child(3) {
    grid-row: 1;
}

.tech-stack:has(> :nth-child(5):last-child) > :nth-child(4) {
    grid-column: 1 / 2;
    grid-row: 2;
    justify-self: end;
    margin-right: calc(var(--grid-gap) / 2);
}

.tech-stack:has(> :nth-child(5):last-child) > :nth-child(5) {
    grid-column: 2 / 3;
    grid-row: 2;
    justify-self: start;
    margin-left: calc(var(--grid-gap) / 2);
}

.tech-item {
    text-align: center;
    opacity: 0;
    transform: scale(0.8) rotateY(90deg);
    animation: techReveal 0.8s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    box-sizing: border-box;
    width: 100%;
}

.tech-item[data-delay="0.1"] { animation-delay: 0.1s; }
.tech-item[data-delay="0.2"] { animation-delay: 0.2s; }
.tech-item[data-delay="0.3"] { animation-delay: 0.3s; }
.tech-item[data-delay="0.4"] { animation-delay: 0.4s; }
.tech-item[data-delay="0.5"] { animation-delay: 0.5s; }

@keyframes techReveal {
    to {
        opacity: 1;
        transform: scale(1) rotateY(0);
    }
}

.tech-logo {
    width: clamp(60px, 8vw, 80px);
    height: clamp(60px, 8vw, 80px);
    margin: 0 auto clamp(0.75rem, 1.5vw, 1rem);
    background: var(--gray-900);
    color: white;
    border-radius: clamp(0.75rem, 1.5vw, 1rem);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
    flex-shrink: 0;
}

.tech-logo::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(255,255,255,0.1), transparent);
    opacity: 0;
    transition: var(--transition);
}

.tech-logo svg {
    width: clamp(30px, 4vw, 40px);
    height: clamp(30px, 4vw, 40px);
    z-index: 1;
    position: relative;
}

.tech-item:hover .tech-logo {
    transform: rotate(360deg) scale(1.1);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.tech-item:hover .tech-logo::before {
    opacity: 1;
}

.tech-badge {
    display: inline-block;
    margin-top: 0.5rem;
    padding: 0.25rem 0.75rem;
    background: var(--gray-100);
    color: var(--gray-700);
    border-radius: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.tech-item h3 {
    font-size: clamp(1rem, 1.8vw, 1.125rem);
    font-weight: 600;
    margin-bottom: clamp(0.25rem, 0.5vw, 0.5rem);
    color: var(--gray-900);
}

.tech-item p {
    color: var(--gray-600);
    font-size: clamp(0.8125rem, 1.3vw, 0.875rem);
    line-height: 1.5;
}

/* Features List - Consistent spacing with grid layout */
.features-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(400px, 100%), 1fr));
    gap: clamp(1rem, 2vw, 1.5rem);
    max-width: min(1200px, 100%);
    margin: 0 auto;
    width: 100%;
    box-sizing: border-box;
    justify-items: stretch;
    align-items: stretch;
}

/* 6 items: 2 columns, 3 rows */
.features-list:has(> :nth-child(6):last-child) {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(3, auto);
}

.features-list:has(> :nth-child(6):last-child) > * {
    width: 100%;
}

.feature-item {
    display: flex;
    gap: clamp(1rem, 2vw, 1.5rem);
    align-items: flex-start;
    opacity: 0;
    transform: translateX(-50px);
    animation: slideInLeft 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    padding: clamp(1.25rem, 2.5vw, 1.75rem);
    background: white;
    border-radius: clamp(0.75rem, 1.5vw, 1rem);
    border: 1px solid var(--gray-200);
    transition: var(--transition);
    box-sizing: border-box;
    width: 100%;
    min-height: fit-content;
    height: auto;
}

.feature-item:hover {
    transform: translateY(-4px) scale(1.02);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
    border-color: var(--gray-300);
}

.feature-item[data-delay="0.1"] { animation-delay: 0.1s; }
.feature-item[data-delay="0.2"] { animation-delay: 0.2s; }
.feature-item[data-delay="0.3"] { animation-delay: 0.3s; }
.feature-item[data-delay="0.4"] { animation-delay: 0.4s; }
.feature-item[data-delay="0.5"] { animation-delay: 0.5s; }
.feature-item[data-delay="0.6"] { animation-delay: 0.6s; }

@keyframes slideInLeft {
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.feature-bullet {
    width: clamp(10px, 1.2vw, 12px);
    height: clamp(10px, 1.2vw, 12px);
    background: var(--gray-900);
    border-radius: 50%;
    margin-top: clamp(0.5rem, 1vw, 0.75rem);
    flex-shrink: 0;
    position: relative;
    animation: bulletPulse 2s ease-in-out infinite;
}

.feature-bullet::after {
    content: '';
    position: absolute;
    inset: -4px;
    border: 2px solid var(--gray-900);
    border-radius: 50%;
    animation: pulseRing 2s ease-out infinite;
}

.feature-icon {
    width: clamp(44px, 5.5vw, 52px);
    height: clamp(44px, 5.5vw, 52px);
    color: var(--gray-900);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gray-100);
    border-radius: clamp(0.5rem, 1vw, 0.75rem);
    padding: clamp(0.5rem, 1vw, 0.75rem);
    margin-right: clamp(0.75rem, 1.5vw, 1rem);
    flex-shrink: 0;
    animation: iconSlide 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    opacity: 0;
    transform: translateX(-20px);
}

.feature-item[data-delay="0.1"] .feature-icon { animation-delay: 0.1s; }
.feature-item[data-delay="0.2"] .feature-icon { animation-delay: 0.2s; }
.feature-item[data-delay="0.3"] .feature-icon { animation-delay: 0.3s; }
.feature-item[data-delay="0.4"] .feature-icon { animation-delay: 0.4s; }
.feature-item[data-delay="0.5"] .feature-icon { animation-delay: 0.5s; }
.feature-item[data-delay="0.6"] .feature-icon { animation-delay: 0.6s; }

.feature-icon svg {
    width: clamp(20px, 2.5vw, 24px);
    height: clamp(20px, 2.5vw, 24px);
    stroke-width: 2;
}

@keyframes iconSlide {
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

@keyframes bulletPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.2); }
}

@keyframes pulseRing {
    0% {
        transform: scale(1);
        opacity: 1;
    }
    100% {
        transform: scale(2);
        opacity: 0;
    }
}

.feature-text h3 {
    font-size: clamp(1.125rem, 2vw, 1.25rem);
    font-weight: 600;
    margin-bottom: clamp(0.5rem, 1vw, 0.75rem);
    color: var(--gray-900);
}

.feature-text p {
    color: var(--gray-600);
    line-height: 1.6;
    font-size: clamp(0.875rem, 1.5vw, 1rem);
}

/* Admin Features - Consistent with symmetric layout */
.admin-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(280px, 100%), 1fr));
    gap: var(--grid-gap);
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    justify-items: stretch;
    align-items: stretch;
}

/* 6 items: Perfect 3x2 */
.admin-features:has(> :nth-child(6):last-child) {
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, auto);
}

.admin-features:has(> :nth-child(6):last-child) > * {
    width: 100%;
    height: auto;
}

/* 4 items: Perfect 2x2 */
.admin-features:has(> :nth-child(4):last-child) {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, auto);
}

.admin-features:has(> :nth-child(4):last-child) > * {
    width: 100%;
    height: auto;
}

.admin-card {
    background: white;
    border: 1px solid var(--gray-200);
    border-radius: clamp(1rem, 2vw, 1.5rem);
    padding: clamp(1.5rem, 3vw, 2rem);
    opacity: 0;
    transform: translateY(30px);
    animation: cardReveal 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
}

.admin-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: auto;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.5s;
}

.admin-card:hover::before {
    left: 100%;
}

.admin-card:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
    border-color: var(--gray-900);
}

.admin-icon {
    width: clamp(40px, 5vw, 48px);
    height: clamp(40px, 5vw, 48px);
    color: var(--gray-900);
    margin-bottom: clamp(0.75rem, 1.5vw, 1rem);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gray-100);
    border-radius: clamp(0.5rem, 1vw, 0.75rem);
    padding: clamp(0.5rem, 1vw, 0.75rem);
    animation: iconRotate 4s linear infinite;
    flex-shrink: 0;
}

.admin-icon svg {
    width: clamp(20px, 2.5vw, 24px);
    height: clamp(20px, 2.5vw, 24px);
    stroke-width: 2;
}

@keyframes iconRotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.admin-card h3 {
    font-size: clamp(1.125rem, 2vw, 1.25rem);
    font-weight: 600;
    margin-bottom: clamp(0.5rem, 1vw, 0.75rem);
    color: var(--gray-900);
}

.admin-card p {
    color: var(--gray-600);
    font-size: clamp(0.875rem, 1.5vw, 1rem);
    line-height: 1.6;
}

/* Discount Showcase - Consistent with symmetric layout */
.discount-showcase {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(300px, 100%), 1fr));
    gap: var(--grid-gap);
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
}

/* 3 items: all in one row if space allows, otherwise stack */
.discount-showcase:has(> :nth-child(3):last-child) {
    grid-template-columns: repeat(3, 1fr);
}

@media (max-width: 1024px) {
    .discount-showcase:has(> :nth-child(3):last-child) {
        grid-template-columns: 1fr;
    }
}

.discount-feature {
    background: white;
    border: 1px solid var(--gray-200);
    border-radius: clamp(1rem, 2vw, 2rem);
    padding: clamp(1.5rem, 3vw, 2.5rem);
    opacity: 0;
    transform: scale(0.9);
    animation: scaleIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
}

@keyframes scaleIn {
    to {
        opacity: 1;
        transform: scale(1);
    }
}

.discount-icon {
    width: clamp(48px, 6vw, 64px);
    height: clamp(48px, 6vw, 64px);
    margin: 0 auto clamp(0.75rem, 1.5vw, 1rem);
    color: var(--gray-900);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gray-100);
    border-radius: clamp(0.75rem, 1.5vw, 1rem);
    padding: clamp(0.75rem, 1.5vw, 1rem);
    animation: discountFloat 3s ease-in-out infinite;
    position: relative;
    flex-shrink: 0;
}

.discount-icon::after {
    content: '';
    position: absolute;
    inset: -3px;
    border: 2px solid var(--gray-300);
    border-radius: 1rem;
    animation: discountGlow 2s ease-in-out infinite;
}

.discount-icon svg {
    width: clamp(24px, 3vw, 32px);
    height: clamp(24px, 3vw, 32px);
    stroke-width: 2;
    z-index: 1;
    position: relative;
}

@keyframes discountFloat {
    0%, 100% { 
        transform: translateY(0) rotate(0deg);
    }
    50% { 
        transform: translateY(-10px) rotate(5deg);
    }
}

@keyframes discountGlow {
    0%, 100% { 
        opacity: 0.3;
        transform: scale(1);
    }
    50% { 
        opacity: 0.6;
        transform: scale(1.1);
    }
}

.discount-feature h3 {
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    font-weight: 600;
    margin-bottom: clamp(0.75rem, 1.5vw, 1rem);
    color: var(--gray-900);
}

.discount-feature ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: clamp(0.5rem, 1vw, 0.75rem);
    margin-top: clamp(0.75rem, 1.5vw, 1rem);
    padding: 0;
    width: 100%;
    box-sizing: border-box;
}

.discount-feature li {
    color: var(--gray-600);
    padding-left: clamp(1.5rem, 2.5vw, 2rem);
    position: relative;
    font-size: clamp(0.8125rem, 1.3vw, 0.9375rem);
    line-height: 1.6;
    word-wrap: break-word;
    overflow-wrap: break-word;
}

.discount-feature li::before {
    content: '✓';
    position: absolute;
    left: clamp(0.25rem, 0.5vw, 0.5rem);
    color: var(--red-600);
    font-weight: 700;
    font-size: clamp(1em, 1.2vw, 1.1em);
}

/* Flow Container - Horizontal flow with steps and arrows */
.flow-container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: clamp(1rem, 2vw, 2rem);
    width: 100%;
    max-width: 100%;
    padding: clamp(1rem, 2vw, 2rem) 0;
    overflow-x: auto;
    overflow-y: hidden;
    box-sizing: border-box;
}

.flow-step {
    background: white;
    border: 1px solid var(--gray-200);
    border-radius: clamp(1rem, 2vw, 1.5rem);
    padding: clamp(1.5rem, 3vw, 2rem);
    opacity: 0;
    transform: translateY(30px);
    animation: cardReveal 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    transition: var(--transition);
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    min-width: clamp(180px, 20vw, 220px);
    max-width: clamp(180px, 20vw, 220px);
    box-sizing: border-box;
}

.flow-step:hover {
    transform: translateY(-5px) scale(1.05);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
    border-color: var(--gray-900);
}

.flow-number {
    width: clamp(36px, 4.5vw, 44px);
    height: clamp(36px, 4.5vw, 44px);
    background: var(--gray-900);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    margin-bottom: clamp(0.75rem, 1.5vw, 1rem);
    position: relative;
    z-index: 2;
    flex-shrink: 0;
}

.flow-icon {
    width: clamp(52px, 6.5vw, 64px);
    height: clamp(52px, 6.5vw, 64px);
    color: var(--gray-900);
    margin-bottom: clamp(0.75rem, 1.5vw, 1rem);
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gray-100);
    border-radius: clamp(0.75rem, 1.5vw, 1rem);
    padding: clamp(0.75rem, 1.5vw, 1rem);
    flex-shrink: 0;
}

.flow-icon svg {
    width: clamp(24px, 3vw, 32px);
    height: clamp(24px, 3vw, 32px);
    stroke-width: 2;
}

.flow-step h3 {
    font-size: clamp(1rem, 1.8vw, 1.125rem);
    font-weight: 600;
    margin-bottom: clamp(0.5rem, 1vw, 0.75rem);
    color: var(--gray-900);
}

.flow-step p {
    color: var(--gray-600);
    font-size: clamp(0.75rem, 1.2vw, 0.875rem);
    line-height: 1.6;
    width: 100%;
}

.flow-arrow {
    width: clamp(32px, 4vw, 48px);
    height: clamp(32px, 4vw, 48px);
    color: var(--gray-400);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transform: translateX(-20px);
    animation: arrowSlide 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    flex-shrink: 0;
}

.flow-arrow svg {
    width: 100%;
    height: 100%;
    stroke-width: 2.5;
}

@keyframes arrowSlide {
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.flow-step[data-delay="0.1"] { animation-delay: 0.1s; }
.flow-step[data-delay="0.3"] { animation-delay: 0.3s; }
.flow-step[data-delay="0.5"] { animation-delay: 0.5s; }
.flow-step[data-delay="0.7"] { animation-delay: 0.7s; }
.flow-step[data-delay="0.9"] { animation-delay: 0.9s; }
.flow-step[data-delay="1.1"] { animation-delay: 1.1s; }

.flow-arrow[data-delay="0.2"] { animation-delay: 0.2s; }
.flow-arrow[data-delay="0.4"] { animation-delay: 0.4s; }
.flow-arrow[data-delay="0.6"] { animation-delay: 0.6s; }
.flow-arrow[data-delay="0.8"] { animation-delay: 0.8s; }
.flow-arrow[data-delay="1.0"] { animation-delay: 1.0s; }

/* Responsive flow - stack vertically on mobile */
@media (max-width: 1024px) {
    .flow-container {
        flex-direction: column;
        align-items: center;
    }
    
    .flow-arrow {
        transform: translateY(-20px) rotate(90deg);
    }
    
    .flow-arrow svg {
        transform: rotate(90deg);
    }
    
    @keyframes arrowSlide {
        to {
            opacity: 1;
            transform: translateY(0) rotate(90deg);
        }
    }
    
    .flow-step {
        min-width: min(280px, 100%);
        max-width: min(280px, 100%);
    }
}

/* UI Showcase - Consistent with symmetric layout */
.ui-showcase {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(250px, 100%), 1fr));
    gap: var(--grid-gap);
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    justify-items: stretch;
    align-items: stretch;
}

/* 4 items: Perfect 2x2 */
.ui-showcase:has(> :nth-child(4):last-child) {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, auto);
}

.ui-showcase:has(> :nth-child(4):last-child) > * {
    width: 100%;
    height: auto;
}

.ui-item {
    text-align: center;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    width: 100%;
}

.ui-preview {
    width: 100%;
    height: clamp(120px, 15vw, 150px);
    margin-bottom: clamp(0.75rem, 1.5vw, 1rem);
    border-radius: clamp(0.75rem, 1.5vw, 1rem);
    overflow: hidden;
    background: var(--gray-100);
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
}

.preview-box {
    width: clamp(60px, 8vw, 80px);
    height: clamp(60px, 8vw, 80px);
    background: var(--gray-900);
    border-radius: clamp(0.375rem, 0.75vw, 0.5rem);
}

.preview-box.animated {
    animation: previewFloat 2s ease-in-out infinite;
}

.preview-box.gradient {
    background: linear-gradient(135deg, var(--gray-900), var(--gray-700));
}

.preview-box.pulse {
    animation: previewPulse 2s ease-in-out infinite;
}

@keyframes previewFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
}

@keyframes previewPulse {
    0%, 100% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.1); opacity: 0.8; }
}

.ui-item h3 {
    font-size: clamp(1rem, 1.8vw, 1.125rem);
    font-weight: 600;
    margin-bottom: clamp(0.5rem, 1vw, 0.75rem);
    color: var(--gray-900);
}

.ui-item p {
    color: var(--gray-600);
    font-size: clamp(0.8125rem, 1.3vw, 0.875rem);
    line-height: 1.5;
}

/* Requirements Grid - Consistent with symmetric layout */
.requirements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(280px, 100%), 1fr));
    gap: var(--grid-gap);
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    justify-items: stretch;
    align-items: stretch;
}

/* 5 items: 3 top, 2 bottom centered */
.requirements-grid:has(> :nth-child(5):last-child) {
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, auto);
}

.requirements-grid:has(> :nth-child(5):last-child) > :nth-child(1),
.requirements-grid:has(> :nth-child(5):last-child) > :nth-child(2),
.requirements-grid:has(> :nth-child(5):last-child) > :nth-child(3) {
    grid-row: 1;
}

.requirements-grid:has(> :nth-child(5):last-child) > :nth-child(4) {
    grid-column: 1 / 2;
    grid-row: 2;
    justify-self: end;
    margin-right: calc(var(--grid-gap) / 2);
}

.requirements-grid:has(> :nth-child(5):last-child) > :nth-child(5) {
    grid-column: 2 / 3;
    grid-row: 2;
    justify-self: start;
    margin-left: calc(var(--grid-gap) / 2);
}

/* 4 items: Perfect 2x2 */
.requirements-grid:has(> :nth-child(4):last-child) {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, auto);
}

.requirements-grid:has(> :nth-child(4):last-child) > * {
    width: 100%;
    height: auto;
}

