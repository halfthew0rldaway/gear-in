    position: relative;
    word-wrap: break-word;
    overflow-wrap: break-word;
    box-sizing: border-box;
    line-height: 1.4;
    min-height: fit-content;
}

.db-table li::before {
    content: '•';
    position: absolute;
    left: clamp(0.625rem, 1.2vw, 0.875rem);
    color: var(--red-600);
    font-weight: 700;
    font-size: clamp(1.1em, 1.4vw, 1.3em);
    line-height: 1;
}

/* Animations Showcase - Consistent with symmetric layout */
.animations-showcase {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(200px, 100%), 1fr));
    gap: var(--grid-gap);
    width: 100%;
    max-width: 100%;
    box-sizing: border-box;
    justify-items: stretch;
    align-items: stretch;
}

/* 6 items: Perfect 3x2 */
.animations-showcase:has(> :nth-child(6):last-child) {
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: repeat(2, auto);
}

.animations-showcase:has(> :nth-child(6):last-child) > * {
    width: 100%;
    height: auto;
}

/* 4 items: Perfect 2x2 */
.animations-showcase:has(> :nth-child(4):last-child) {
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: repeat(2, auto);
}

.animations-showcase:has(> :nth-child(4):last-child) > * {
    width: 100%;
    height: auto;
}

.anim-demo {
    text-align: center;
    opacity: 0;
    transform: scale(0.8);
    animation: scaleIn 0.6s cubic-bezier(0.4, 0, 0.2, 1) forwards;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    width: 100%;
}

.demo-box {
    width: clamp(90px, 12vw, 120px);
    height: clamp(90px, 12vw, 120px);
    margin: 0 auto clamp(0.75rem, 1.5vw, 1rem);
    background: var(--gray-900);
    border-radius: clamp(0.75rem, 1.5vw, 1rem);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    font-size: clamp(0.75rem, 1.2vw, 0.875rem);
