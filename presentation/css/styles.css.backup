}

.demo-box.slide-in {
    animation: demoSlideIn 2s ease-in-out infinite;
}

.demo-box.fade-in {
    animation: demoFadeIn 2s ease-in-out infinite;
}

.demo-box.scale-in {
    animation: demoScaleIn 2s ease-in-out infinite;
}

.demo-box.float {
    animation: demoFloat 2s ease-in-out infinite;
}

.demo-box.pulse {
    animation: demoPulse 2s ease-in-out infinite;
}

.demo-box.shimmer {
    background: linear-gradient(90deg, var(--gray-900), var(--gray-700), var(--gray-900));
    background-size: 200% 100%;
    animation: demoShimmer 2s linear infinite;
}

@keyframes demoSlideIn {
    0%, 100% { transform: translateX(-50px); opacity: 0; }
    50% { transform: translateX(0); opacity: 1; }
}

@keyframes demoFadeIn {
    0%, 100% { opacity: 0; }
    50% { opacity: 1; }
}

@keyframes demoScaleIn {
    0%, 100% { transform: scale(0.5); opacity: 0; }
    50% { transform: scale(1); opacity: 1; }
}

@keyframes demoFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-20px); }
}

@keyframes demoPulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.2); }
}

@keyframes demoShimmer {
    0% { background-position: -200% 0; }
    100% { background-position: 200% 0; }
}

.anim-demo p {
    color: var(--gray-600);
    font-size: clamp(0.8125rem, 1.3vw, 0.875rem);
    margin-top: clamp(0.5rem, 1vw, 0.75rem);
